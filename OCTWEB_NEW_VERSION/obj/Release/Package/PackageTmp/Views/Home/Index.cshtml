@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-lg border-0 rounded-lg mt-0 mb-3">
        <div class="card-header"><h2 class="page-title "> WELCOME TO OCT </h2></div>
        <div class="card-body">
            
            <div>
                @using Microsoft.AspNet.Identity
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                         <div>
                            <p>Hello  @User.Identity.GetUserName() ! </p>
                            <p><a href="/Account/LogOff"> Log Out</a></p>
                        </div>
                        <div>
                            <p><a href="/Account/Manage"> Change Password </a></p>
                        </div>
                    }
                }

               else
                {
                <div>
                    <p> You are not logged in  </p>
                    <div><a href="/Account/Login"> Log In </a></div>
                </div>
                }
            </div>
        </div>
    </div>
</div>