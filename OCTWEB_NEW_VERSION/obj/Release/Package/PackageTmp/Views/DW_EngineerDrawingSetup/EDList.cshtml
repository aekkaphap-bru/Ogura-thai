                                                        <tr>
                                                            <td>@i.level</td>
                                                            <td>@i.drawing_no</td>
                                                            <td>@i.model_no</td>
                                                            <td>@i.part_name</td>
                                                            <td>
                                                                @if (i.formulas_count > 0)
                                                                {
                                                                    <a href="@Url.Action(actionName: "ViewFormulas"
                                                                                , controllerName: "DW_EngineerDrawingSetup"
                                                                                , routeValues: new {id = i.id })" class="badge badge-counter badge-warning" target="_blank">
                                                                        <strong style="font-size:12px">@i.formulas_count </strong>
                                                                    </a>
                                                                }
                                                            </td>
