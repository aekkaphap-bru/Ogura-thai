@model OCTWEB_NET45.Models.DrawingReportModel
@using PagedList.Mvc
@{
    ViewBag.Title = "DList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/static/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/static/datatables/datatables.min.js"></script>
<div class="container ">
    @using (Html.BeginForm("DList", "DW_DrawingReport", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Form1" }))
    {
        <div class="form-row">
            <div class="col">
                <h4 class="font-weight-bolder my-1 text-center">Drawing <span style="color:green;">Report</span></h4>
                <p class="text-success">@ViewBag.Message</p>
                <p class="text-danger">@ViewBag.errorMessage</p>
                @Html.ValidationSummary(true)
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <fieldset>
                    <legend>Enter condition for search drawing data</legend>
                    <div class="form-row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Drawing Type:</label>
                                @Html.DropDownList("drawingType_id", Model.SelectDrawingType, new { @class = "form-control form-control-sm", style = "display: inline-block; width: calc(80% - 120px);" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" id="_groupline">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Group Line:</label>
                                @Html.DropDownList("groupLine_id_pr", Model.SelectGroupLine, "", new { @class = "form-control form-control-sm", style = "display: inline-block; width: calc(80% - 120px);" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Part Name: </label>
                                <div style="display: inline-block; width: calc(80% - 120px);">
                                    @Html.TextBoxFor(m => m.partName_en, "", new { @class = "form-control form-control-sm", style = "width: 100%; margin-bottom: 5px;" })
                                    @Html.TextBoxFor(m => m.partName_pr, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" id="_level">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Level:</label>
                                @Html.TextBoxFor(m => m.level_en, "", new { @class = "form-control form-control-sm", style = "display: inline-block; width: calc(80% - 120px);" })
                            </div>
                            <div class="form-group" id="_linename">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Line Name</label>
                                @Html.TextBoxFor(m => m.lineName_pr, "", new { @class = "form-control form-control-sm", style = "display: inline-block; width: calc(80% - 120px);" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Drawing Number: </label>
                                <div style="display: inline-block; width: calc(80% - 120px);">
                                    @Html.TextBoxFor(m => m.drawingNo_en, "", new { @class = "form-control form-control-sm", style = "width: 100%; margin-bottom: 5px;" })
                                    @Html.TextBoxFor(m => m.drawingNo_pr, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Model Number: </label>
                                <div style="display: inline-block; width: calc(80% - 120px);">
                                    @Html.TextBoxFor(m => m.modelNo_en, "", new { @class = "form-control form-control-sm", style = "width: 100%; margin-bottom: 5px;" })
                                    @Html.TextBoxFor(m => m.modelNo_pr, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Semi Assembly No.: </label>
                                @Html.TextBoxFor(m => m.semiAssemblyNo_en, "", new { @class = "form-control form-control-sm", style = "display: inline-block; width: calc(80% - 120px);" })
                            </div>
                        </div>
                        <div class="col-md-6" id="contentcustom">
                            <div class="form-group">
                                <label style="display: inline-block; margin-right: 10px; width: 100px;">Customer No.: </label>
                                @Html.TextBoxFor(m => m.customerNo_en, "", new { @class = "form-control form-control-sm", style = "display: inline-block; width: calc(80% - 120px);" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 align-self-end">
                        <div class="form-group">
                            <button type="submit" id="SearchBtn" name="SearchBtn" class="btn btn-sm btn-success" value="Search">
                                <i class="fas fa-search"></i> Search
                            </button>
                            <button type="button" name="ExportToCsvBtn" id="ExportToCsvBtn" class="btn btn-sm btn-outline-primary" value="Export">
                                <i class="fas fa-download"></i> Export
                            </button>
                            <input hidden="hidden" id="ExportToCsv" name="ExportToCsv" value="null" />

                            <button id="clear" type="button" name="clear" class="btn btn-sm btn-outline-dark">
                                <i class="fas fa-eraser"></i> Clear
                            </button>
                        </div>
                    </div>

                </fieldset>
            </div>
        </div>
    }
</div>
