@model OCTWEB_NET45.Models.DrawingReportModel
@using PagedList.Mvc
@{
    ViewBag.Title = "DList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("DList", "DW_DrawingReport", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Form1" }))
    {
        <div class="card">
            <div class="card-header">
                <div class="form-row">
                    <div class="col">
                        <h4 class="page-title ">Drawing <span style="color:green;">Report</span></h4>
                        <p class="text-success">@ViewBag.Message</p>
                        <p class="text-danger">@ViewBag.errorMessage</p>
                        @Html.ValidationSummary(true)
                    </div>
                </div>
            </div>

            <div class="card-body">
                 <div class="form-row">
                    <div class="col">
                        <fieldset>
                            <div class="form-row ">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label  class="mb-2" >Drawing Type:</label>
                                        @Html.DropDownList("drawingType_id", Model.SelectDrawingType, new { @class = "form-control form-control-sm", style = "width: calc(80% - 120px);" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group" id="_groupline">
                                        <label  class="mb-2">Group Line:</label>
                                        @Html.DropDownList("groupLine_id_pr", Model.SelectGroupLine, "", new { @class = "form-control form-control-sm", style = "width: calc(80% - 120px);" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label  class="mb-2">Part Name: </label>
                                        <div style="width: calc(80% - 120px);">
                                            @Html.TextBoxFor(m => m.partName_en, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                            @Html.TextBoxFor(m => m.partName_pr, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group" id="_level">
                                        <label  class="mb-2">Level:</label>
                                        @Html.TextBoxFor(m => m.level_en, "", new { @class = "form-control form-control-sm", style = "width: calc(80% - 120px);" })
                                    </div>
                                    <div class="form-group" id="_linename">
                                        <label  class="mb-2">Line Name</label>
                                        @Html.TextBoxFor(m => m.lineName_pr, "", new { @class = "form-control form-control-sm", style = "width: calc(80% - 120px);" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label  class="mb-2">Drawing Number: </label>
                                        <div style="width: calc(80% - 120px);">
                                            @Html.TextBoxFor(m => m.drawingNo_en, "", new { @class = "form-control form-control-sm", style = "width: 100%; margin-bottom: 5px;" })
                                            @Html.TextBoxFor(m => m.drawingNo_pr, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label  class="mb-2">Model Number: </label>
                                        
                                        <div style="width: calc(80% - 120px);">
                                            @Html.TextBoxFor(m => m.modelNo_en, "", new { @class = "form-control form-control-sm", style = "width: 100%; margin-bottom: 5px;" })
                                            @Html.TextBoxFor(m => m.modelNo_pr, "", new { @class = "form-control form-control-sm", style = "width: 100%;" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label  class="mb-2">Semi Assembly No.: </label>
                                        @Html.TextBoxFor(m => m.semiAssemblyNo_en, "", new { @class = "form-control form-control-sm", style = "width: calc(80% - 120px);" })
                                    </div>
                                </div>
                                <div class="col-md-6" id="contentcustom">
                                    <div class="form-group">
                                        <label  class="mb-2">Customer No.: </label>
                                        @Html.TextBoxFor(m => m.customerNo_en, "", new { @class = "form-control form-control-sm", style = "width: calc(80% - 120px);" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8 align-self-end">
                                <div class="form-group">
                                    <button type="submit" id="SearchBtn" name="SearchBtn" class="btn btn-sm btn-success" value="Search">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    <button type="button" name="ExportToCsvBtn" id="ExportToCsvBtn" class="btn btn-sm btn-outline-primary" value="Export">
                                        <i class="fas fa-download"></i> Export
                                    </button>
                                    <input hidden="hidden" id="ExportToCsv" name="ExportToCsv" value="null" />

                                    <button id="clear" type="button" name="clear" class="btn btn-sm btn-outline-dark">
                                        <i class="fas fa-eraser"></i> Clear
                                    </button>
                                </div>
                            </div>

                        </fieldset>
                    </div>
                </div>
            </div>
        </div>  
    }
</div>
