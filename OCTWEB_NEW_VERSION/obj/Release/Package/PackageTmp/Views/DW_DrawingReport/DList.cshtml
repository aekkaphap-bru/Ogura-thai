<script language="JavaScript">

    $(document).on('select2:open', function (e) {
        const selectId = e.target.id;
        $(".select2-search__field[aria-controls='select2-" + selectId + "-results']").each(function (key, value) {
            value.focus();
        });
    });

    $("#SearchBtn").click(function () {
        $("#ExportToCsv").val("");
        document.forms["Form1"].submit();
    })

    $("#ExportToCsvBtn").click(function () {
        $("#ExportToCsv").val("ExportToCsv");
        document.forms["Form1"].submit();
    })

    $(document).ready(function () {
        var drawingType = $("#drawingType_id").val();

        // 1 => Process
        if (drawingType == 1) {
            $("#partName_pr").show();
            $("#modelNo_pr").show();
            $("#drawingNo_pr").show();
            $("#_groupline").show();
            $("#_linename").show();

            $("#partName_en").hide();
            $("#drawingNo_en").hide();
            $("#modelNo_en").hide();
            $("#_level").hide();
        }
        else {
            // 0 => Engineer
            $("#partName_en").show();
            $("#_level").show();
            $("#drawingNo_en").show();
            $("#modelNo_en").show();

            $("#partName_pr").hide();
            $("#modelNo_pr").hide();
            $("#drawingNo_pr").hide();
            $("#_groupline").hide();
            $("#_linename").hide();
            $("#contentlinename").css("display", "none");
        }
    })

    $("#drawingType_id").on("change", function () {
        var drawingType = $("#drawingType_id").val();
       // 1 => Process
