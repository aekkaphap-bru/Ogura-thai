@model OCTWEB_NET45.Models.CompanyRuleTypeSetModel
@using PagedList.Mvc;
@{
    ViewBag.Title = "Company Rule Type Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h4 class="page-title ">Company Rule Type <span style="color:red;">Setup</span></h4>
                    <p class="text-success">@ViewBag.Message</p>
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                    @Html.ValidationSummary(true)
                </div>
            </div>
        </div>
        <div class="card-body">
               <div class="row">
                <div class="col">
                    @using (Html.BeginForm("CompanyRuleTypeSetList", "CompanyRuleTypeSet", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Form1" }))
                    {
                        <fieldset>
                            <div class="form-row oct-justify-content-start">
                                <div class="col-md-4">
                                    <div class="form-group ">
                                        <label class="mb-1">Company Rule Type: </label>
                                        @Html.TextBoxFor(m => m.searcCompanyRuleType, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    </div>
                                </div>
                                <div class="col-md-4 align-self-end">
                                    <div class="form-group">
                                        <button type="submit" id="SearchBtn" name="SearchBtn" value="Search" class="btn btn-sm btn-success">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                        <button type="submit" id="ExportToCsvBtn" name="ExportToCsvBtn" value="Export" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-file"></i> Export
                                        </button>
                                        <input hidden="hidden" id="ExportToCsv" name="ExportToCsv" value="null" />

                                        <button id="clear" type="button" name="clear" class="btn btn-sm btn-outline-dark">
                                            <i class="fas fa-eraser"></i> Clear
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

<div class="container-fluid">
    @using (Html.BeginForm("DeleteCompanyRuleType", "CompanyRuleTypeSet", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Form2" }))
    {
        <div class="row">
            <div class="col align-self-end">
                <div class="form-group">
                    <a href="@Url.Action(actionName:"CreateCompanyRuleType"
                            ,controllerName:"CompanyRuleTypeSet")" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Add
                    </a>

                    <button type="button" id="deleteall" value="Delete" name="deleteall" class="btn btn-sm btn-danger" >
                        <i class="fas fa-trash-alt"></i> Delete
                    </button> 
                </div>
            </div>
        </div>
        <div class="row">
            <table class="tablecustom" id="table1" style="font-size:14px;">
                <thead>
                    <tr>
                        <th width="5%">
                            <input type="checkbox" name="select-all" id="select-all" />
                        </th>
                        <th width="5%">
                            Edit
                        </th>
                        <th width="5%">
                            Items
                        </th>

                        <th>
                            Company rule Type
                        </th>
                        <th>
                            Note
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.WSR_CompRuleTypeModelPagedList.Select((value, i) => new { i, value }))
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedItem" value="@(item.value.CRT_Id)" />
                            </td>
                            <td>
                                <a href="@Url.Action(actionName: "EditCompRuleType"
                                        , controllerName: "CompanyRuleTypeSet"
                                        , routeValues: new {id=item.value.CRT_Id })" class="btn btn-sm btn-success">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                            <td>
                                @((item.i + 1) + (30 * (Model.WSR_CompRuleTypeModelPagedList.PageNumber - 1)))
                            </td>                       
                            <td>
                                @Html.DisplayFor(modelItem => item.value.CRT_Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.value.CRT_Note)
                            </td>                        
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <div class="row justify-content-center">
        Page @(Model.WSR_CompRuleTypeModelPagedList.PageCount < Model.WSR_CompRuleTypeModelPagedList.PageNumber ? 0 : Model.WSR_CompRuleTypeModelPagedList.PageNumber) of @Model.WSR_CompRuleTypeModelPagedList.PageCount
    </div>
    <div class="row justify-content-center">
        @Html.PagedListPager(Model.WSR_CompRuleTypeModelPagedList, page => Url.Action("CompanyRuleTypeSetList", new RouteValueDictionary()
            {
                {"Page",page},
                {"searcCompanyRuleType",Model.searcCompanyRuleType},
            }))
    </div>

</div>

<script>
    // Listen for click on toggle checkbox
    $('#select-all').click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $(':checkbox').each(function () {
                this.checked = true;
            });
        } else {
            $(':checkbox').each(function () {
                this.checked = false;
            });
        }
    });

    $(document).on('select2:open', function (e) {
        const selectId = e.target.id;
        $(".select2-search__field[aria-controls='select2-" + selectId + "-results']").each(function (key, value) {
            value.focus();
        });
    });

    $(document).ready(function () {

        $("#searcCompanyRuleType").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/CompanyRuleTypeSet/GetComRuleTypeName",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return item;
                        }))
                    }
                })
            },
            messages: {
                noResults: 'No results found.',
                results: function (count) {
                    return count + (count > 1 ? ' results' : ' result ') + ' found';
                }
            },
        });
       
    });

    $("#clear").click(function () {
        $('#searcCompanyRuleType').val(null).trigger('change');
    });

    $("#deleteall").click(function () {
        $("#ExportToCsv").val("");
        if (confirm('Delete all selected elements?'))
        {
            document.forms["Form2"].submit();
        }
    })

    $("#SearchBtn").click(function () {
        $("#ExportToCsv").val("");
        document.forms["Form1"].submit();
    })


    $("#ExportToCsvBtn").click(function () {
        $("#ExportToCsv").val("ExportToCsv");
        document.forms["Form1"].submit();
    })


    $("#table1 tbody tr").click(function () {
        if ($(this).hasClass('selected')) {
            $(this).removeClass('selected');
        }
        else {
            $(this).addClass('selected');
        }
    });
</script>