@model OCTWEB_NET45.Models.UserDetailModel
@{
    ViewBag.Title = "Edit user detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-lg border-0 rounded-lg mt-0 mb-3">
        <div class="card-header justify-content-center">
            <h3 class="font-weight-bolder my-1 text-center">Edit Account Detail</h3>
            <p class="text-danger">@ViewBag.Message</p>
        </div>
        <div class="card-body justify-content-center ">
        
                    @using (Html.BeginForm("editUserDetail", "UserDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-row ">
                            <div class="col">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new {@class="text-danger" })
                                @Html.HiddenFor(m => m.USE_Id, new { @class = "form-control" })
                                @Html.HiddenFor(m => m.USE_Password, new { @class = "form-control" })
                                @Html.HiddenFor(m => m.USE_Usercode)
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="mb-1">User Name: </label>
                                    @Html.TextBoxFor(m => m.USE_Account, new { @class = "form-control form-control-sm" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="mb-1">Email: </label>
                                    @Html.TextBoxFor(m => m.USE_Email, new { @class = "form-control form-control-sm" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.USE_Email)</p>
                                </div>
                            </div>
                            <div class="col-md-3 ">
                                <div class="form-group">
                                    <label class="mb-1">User Code: </label>
                                    @Html.TextBoxFor(m => m.USE_Usercode, new { @class = "form-control form-control-sm", @readonly = "true" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.USE_Usercode)</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col">
                                <fieldset>
                                    <legend>User Detail</legend>
                                    <div class="form-row justify-content-center">
                                        <div class="col-md-3 ">
                                            <div class="form-group">
                                                <label class="mb-1">Fist Name: </label>
                                                @Html.TextBoxFor(m => m.USE_FName, new { @class = "form-control form-control-sm" })
                                            </div>
                                        </div>
                                        <div class="col-md-3 ">
                                            <div class="form-group">
                                                <label class="mb-1">Last Name: </label>
                                                @Html.TextBoxFor(m => m.USE_LName, new { @class = "form-control form-control-sm" })
                                            </div>
                                        </div>
                                        <div class="col-md-3 ">
                                            <div class="form-group">
                                                <label class="mb-1">Nick Name: </label>
                                                @Html.TextBoxFor(m => m.USE_NickName, new { @class = "form-control form-control-sm" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row justify-content-center">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="mb-1">Tel: </label>
                                                @Html.TextBoxFor(m => m.USE_TelNo, new { @class = "form-control form-control-sm" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="mb-1">Department: </label>
                                                @Html.DropDownList("Dep_Id", Model.Departments, "Departments", new { @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(m => m.Dep_Id, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="mb-1">Nationality: </label>
                                                @Html.DropDownList("USE_Nationality", Model.National, "Nationality", new { @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(m => m.USE_Nationality, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row justify-content-center">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label class="mb-1">Status: </label>
                                                @Html.CheckBoxFor(m => m.BoolStatus, new { @class = "form-control form-control-sm" })
                                            </div>
                                        </div>
                                        <div class="col-md-6"></div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        
                        <div class="form-row justify-content-center">
                            <div class="col text-center">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success" value="Save Edit">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                    &nbsp;
                                    <button type="button" onclick="history.back()" name="Cancel" class="btn btn-outline-primary">
                                        <i class="fas fa-ban"></i> Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
        </div>
    </div>
</div>
