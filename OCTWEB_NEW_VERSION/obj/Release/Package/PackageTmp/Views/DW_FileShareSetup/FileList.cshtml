       */
        //----------------------------------------------Table1--------------------------------------------------------//
        var dt2 = $("#table1").DataTable({
            "data":@Html.Raw(Json.Encode(Model.fileshareList)),
            "columns": [
                { "data": "id", "autowidth":true },
                { "data": "id", "autowidth":true
                        ,"render": function(data, type, row){
                            return '<div><a href="/DW_FileShareSetup/Edit?id='+data+'" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Edit</a></div>';
                        }
                },
                { "data": "id", "autowidth":true },
                { "data": "file", "autowidth":true
                    ,"render": function(data, type, row){
                        if(data != ""){
                            return '<div><a href="/DW_FileShareSetup/DownloadFile?filename='+data+'"class="btn btn-sm link-info"><i class="fas fa-download"></i>Download</a></div>';
                        }
                        else{
                            return '<div></div>';
                        }
                    }
                },                
                { "data": "rev","autowidth":true},
                { "data": "name", "autowidth":true},
                { "data": "date_str", "autowidth":true},
                { "data": "note", "autowidth":true},
                
            ],
            select: true,
            buttons: [],
            "pageLength": 30,
