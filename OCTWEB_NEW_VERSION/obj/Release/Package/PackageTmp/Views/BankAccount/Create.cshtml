@model OCTWEB_NET45.Models.BankAccountModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <a href="/BankAccount/Setup" class="btn-outline-secondary">Setup <i class="fa fa-angle-right"></i> </a>&nbsp;
    </div>
    <div class="row">
        <div class="container">
            <div class="card shadow-lg border-0 rounded-lg mt-0 mb-3">
                <div class="card-header justify-content-center">
                    <h4 class="font-weight-bolder my-1 text-center">Create</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "BankAccount", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                    {
                        <div class="form-row justify-content-center">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <p class="text-danger">@ViewBag.Message</p>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Bank Name (English): </label>
                                    @Html.TextBoxFor(m => m.BankName_EN, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.BankName_EN)</p>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Address (English): </label>
                                    @Html.TextBoxFor(m => m.Address_EN, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.Address_EN)</p>
                                </div>
                            </div>
                        </div>
                          <div class="form-row justify-content-center">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Bank Name (ภาษาไทย): </label>
                                    @Html.TextBoxFor(m => m.BankName_TH, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.BankName_TH)</p>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>Address (ภาษาไทย): </label>
                                    @Html.TextBoxFor(m => m.Address_TH, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.Address_TH)</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Account No.: </label>
                                    @Html.TextBoxFor(m => m.Acc_No, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.Acc_No)</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Branch: </label>
                                    @Html.TextBoxFor(m => m.Branch, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.Branch)</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Swift Code: </label>
                                    @Html.TextBoxFor(m => m.SwiftCode, new { @class = "form-control form-control-sm", style = "width:100%" })
                                    <p class="text-danger">@Html.ValidationMessageFor(m => m.SwiftCode)</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col justify-content-center">
                                <div class="form-group text-center">
                                    <button type="submit" value="Save" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save
                                    </button>
                                    &nbsp;
                                    <button type="button" onclick="history.back()" name="Cancel" class="btn btn-outline-primary">
                                        <i class="fas fa-ban"></i> Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>