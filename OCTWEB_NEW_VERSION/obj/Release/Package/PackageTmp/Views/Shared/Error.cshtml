@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "เกิดข้อผิดพลาด";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="error-page">
    <div class="text-center">
        <div class="error-icon mb-4">
            <i class="fas fa-exclamation-triangle fa-7x text-warning"></i>
        </div>
        <div class="error-header">
            <h1 class="h2 mb-3 font-weight-bold text-danger">เกิดข้อผิดพลาด</h1>
            <p class="mb-4 text-muted">ขออภัย เกิดข้อผิดพลาดขึ้นในการดำเนินการ</p>
        </div>
        
        @if (Model != null && HttpContext.Current.IsDebuggingEnabled)
        {
            <div class="error-details p-4 mb-4 bg-light rounded">
                <h4 class="text-danger">@Model.Exception.Message</h4>
                <div class="mt-3">
                    <h5>Controller: @Model.ControllerName</h5>
                    <h5>Action: @Model.ActionName</h5>
                    <hr />
                    <div class="alert alert-warning">
                        <pre class="text-start overflow-auto">@Model.Exception.StackTrace</pre>
                    </div>
                </div>
            </div>
        }
        
        <div class="error-actions mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-2">
                <i class="fas fa-home me-1"></i> กลับสู่หน้าหลัก
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-arrow-left me-1"></i> กลับไปหน้าก่อนหน้า
            </a>
        </div>
    </div>
</div>