@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div class="card shadow-lg border-0 rouded-lg mt-0 mb-3"  >
        <div class="card-header justify-content-center"><h3 class="text-danger">Error. </h3></div>
        <div class="card-body">
            @{
                if (String.IsNullOrEmpty(ViewBag.errorMessage))
                {
                    <p class="text-danger">An error occurred while processing your request.</p>
                }
                else
                {
                    <p class="text-danger">@ViewBag.errorMessage</p>
                }
            }

        </div>
    </div>
</div>

