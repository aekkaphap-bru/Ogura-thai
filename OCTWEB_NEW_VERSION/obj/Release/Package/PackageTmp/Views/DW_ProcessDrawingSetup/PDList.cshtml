                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Line Name: </label>
                                @Html.TextBoxFor(m => m.lineName, "", new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Drawing No.: </label>
                                @Html.TextBoxFor(m => m.drawingNo, "", new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Model No.: </label>
                                @Html.TextBoxFor(m => m.modelNo, "", new { @class = "form-control form-control-sm" })
                            </div>
                        </div>
                    </div>
