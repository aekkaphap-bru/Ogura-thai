                    return count + (count > 1 ? ' results' : ' result ') + ' found';
                }
            },
        });
    })

    $(document).ready(function () {
        /*
        $("#groupLine_id").select2({
            placeholder: "All",
            allowClear: true,
            width: 'resolve'
        });*/

        //-------------------------------------------Table1-------------------------------------------------------//
        var dt = $("#table1").DataTable({
            "data":@Html.Raw(Json.Encode(Model.ProcessDrawingList)),
            "columns": [
                { "data": "id", "autowidth":true },
                { "data": "id", "autowidth":true
                        ,"render": function(data, type, row){
                            return '<div><a href="/DW_ProcessDrawingSetup/Edit?id='+data+'" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Edit</a></div>';
                        }
                },
                { "data": "id", "autowidth":true },
                {
                    "data": "file", "autowidth":true
                    ,"render": function(data, type, row){
                        if(data != "" && data != null){
                            return '<div><a href="/DW_ProcessDrawingSetup/DownloadFile?filename='+data+'" class="btn btn-sm link-info"><i class="fas fa-drafting-compass"></i>Drawing File</a></div>';
                        }
                        else{
                            return '<div><span class="text-danger">ไม่พบไฟล์</span></div>';
                        }
                    }
                },
                { "data": "groupLine", "autowidth":true},
                { "data": "lineName", "autowidth":true},
                { "data": "drawingNumber","autowidth":true},
                { "data": "rev", "autowidth":true},
                { "data": "partName", "autowidth":true},
                { "data": "modelNo", "autowidth":true},
                { "data": "remark", "autowidth":true},

            ],
            select: true,
            buttons: [],
            "pageLength": 30,
            "lengthMenu": [[30,50,100,-1],[30,50,100,"All"]],
            columnDefs: [
                          {sortable: false,targets: 1 , width:100} ,
                          {sortable: false,targets: 2 , width:50} , 
                          {sortable: false,targets: 3 , width:120} , 
                          {sortable: true,targets: 4 , width:100} ,  
                          {sortable: true,targets: 5 , width:100} ,  
                          {sortable: true,targets: 6 , width:100} ,  
                          {sortable: true,targets: 7 , width:50} ,
                          {sortable: true,targets: 8 , width:100} ,  
                          {sortable: true,targets: 9 , width:150} ,  
                          {sortable: false,targets: 10 ,width:100 } ,     
                         
                          {targets: 0 , orderable: false, className: 'select-checkbox',
                              'render': function(data, type,full,meta){
                                  return '<input type="checkbox" name="selectedItem" value="'+data+'">';
                              }
                          }
            ],
            "ordering": true,
            order: [[ 4, 'asc' ]],
            fixedColumns: true

        })
        dt.on('order.dt search.dt', function () {
            let i = 1;
            dt.cells(null, 2, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data(i++);
            });
        }).draw();

    });


