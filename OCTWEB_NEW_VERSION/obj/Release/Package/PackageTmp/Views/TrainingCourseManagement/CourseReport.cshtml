
@{
    ViewBag.Title = "CourseReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var style_head_1 = " background: linear-gradient(to right, #ede6d6, #e3ebc9, #c7f2c9, #9bf9dc, #57feff);"; //max-width: 30rem;
    var style_body_1 = " background: linear-gradient(to right, #ede6d6, #e3ebc9, #c7f2c9, #9bf9dc, #57feff);";
    var style_foot_1 = " background: linear-gradient(to right, #ede6d6, #e3ebc9, #c7f2c9, #9bf9dc, #57feff);";

    var style_head_2 = "background: linear-gradient(to right, #ede6d6, #e1dba3, #c2d575, #90d14e, #32cd32);";
    var style_body_2 = "background: linear-gradient(to right, #ede6d6, #e1dba3, #c2d575, #90d14e, #32cd32);";
    var style_foot_2 = "background: linear-gradient(to right, #ede6d6, #e1dba3, #c2d575, #90d14e, #32cd32);";
}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="text-center">
                <h4 class="page-title ">Training Course <span style="color:green;">Reports</span></h4>
                <hr/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-0 mb-3">
                <div class="card-header" style="@style_head_1">
                    <div class=" bg-white border-0 rounded-lg mt-0 mb-3  justify-content-center">
                        <h4 class="font-weight-bold text-dark my-1 text-center ">[WS] Training Course Reports</h4>
                        <hr />
                    </div>
                </div>
                <div class="card-body" style="@style_body_1">
                    <p style="color:black;">Veiw Reports Training Working Standard</p>
                    <p style="color:black;">(แบบรายงาน การฝึกอบรมมาตรฐานการทำงาน [WS])</p>
                </div>
                <div class="card-footer" style="@style_foot_1">
                    <a href="@Url.Action(actionName: "CourseWSList", controllerName: "TrainingCourseReport")" class="btn btn-primary">
                        <i class="fas fa-folder-open"></i> View Reports
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-0 mb-3">
                <div class="card-header" style="@style_head_2">
                    <div class=" bg-white border-0 rounded-lg mt-0 mb-3  justify-content-center">
                        <h4 class="font-weight-bold text-dark my-1 text-center ">Training Course Reports</h4>
                        <hr />
                    </div>
                </div>
                <div class="card-body" style="@style_body_2">
                    <p style="color:black;">Veiw Reports Training Course</p>
                    <p style="color:black;">(แบบรายงาน หลักสูตรการฝึกอบรม)</p>
                </div>
                <div class="card-footer" style="@style_foot_2">
                    <a href="@Url.Action(actionName: "CourseList", controllerName: "TrainingCourseReport")" class="btn btn-success">
                        <i class="fas fa-folder-open"></i> View Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>