<script language="JavaScript">
    // Listen for click on toggle checkbox
    $('#select-all').click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $(':checkbox').each(function () {
                this.checked = true;
            });
        } else {
            $(':checkbox').each(function () {
                this.checked = false;
            });
        }
    });

    $(document).on('select2:open', function (e) {
        const selectId = e.target.id;
        $(".select2-search__field[aria-controls='select2-" + selectId + "-results']").each(function (key, value) {
            value.focus();
        });
    });

    $("#SearchBtn").click(function () {
        $("#ExportToCsv").val("");
        document.forms["Form1"].submit();
    })

    $("#clear").click(function () {
        $('#file_name_id').val(null).trigger('change');
    });

    $("#tablefileShareReport tbody tr").click(function () {

        if ($(this).hasClass('selected')) {
            $(this).removeClass('selected');
        }
        else {
            $(this).addClass('selected');
        }

    });

    $(document).ready(function () {
        /*
        $("#file_name_id").select2({
            placeholder: "All",
            allowClear: true,
            width: 'resolve'
        });
        */
        //----------------------------------------------tablefileShareReport--------------------------------------------------------//
        var dt2 = $("#tablefileShareReport").DataTable({
            "data":@Html.Raw(Json.Encode(Model.fileshareList)),
            "columns": [
                { "data": "id", "autowidth":true },
                { "data": "file", "autowidth":true
                    ,"render": function(data, type, row){
                        if(data != ""){
                            return '<div><a href="/DW_FileShareReport/DownloadFile?filename='+data+'"class="btn btn-sm link-info"><i class="fas fa-download"></i>Download</a></div>';
                        }
                        else{
                            return '<div></div>';
                        }
                    }
                },

                { "data": "rev","autowidth":true},
                { "data": "name", "autowidth":true},
                { "data": "date_str", "autowidth":true},
                { "data": "note", "autowidth":true},

            ],
            select: true,
            buttons: [],
            "pageLength": 30,
            "lengthMenu": [[30,50,100,-1],[30,50,100,"All"]],
            columnDefs: [ {sortable: false,targets: 0, width:50 } ,
                          {sortable: false,targets: 1, widht:120 } ,
                          {sortable: true,targets: 2, widht: 50} ,
                          {sortable: true,targets: 3, widht: 300} ,
                          {sortable: true,targets: 4, widht: 100} ,
                          {sortable: true,targets: 5, widht: 300} ,

            ],
            "ordering": true,
            order: [[ 2, 'asc' ]],
            fixedColumns: true

        })
        dt2.on('order.dt2 search.dt2', function () {
            let i = 1;

            dt2.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data(i++);
            });
        }).draw();
    });

</script>