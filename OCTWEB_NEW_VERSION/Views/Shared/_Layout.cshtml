@{
    string currentPage = ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="OCT Web Applications">
    @* <meta name="author" content="ORAWAN M."> *@
    <title>OCT - @ViewBag.Title</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/static/img/1ico.png" />
    
    <!-- Core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/static/vendor/fontawesome-free-5.15.4-web/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/content/jquery-ui.css" rel="stylesheet" />
    <link href="~/static/select2/css/select2.min.css" rel="stylesheet" />
    
    <!-- Custom CSS -->
    <link href="~/content/oct-core.css" rel="stylesheet" />
    <link href="~/content/oct-layout.css" rel="stylesheet" />
    <!--ไม่มีผล เพราใช้งาน text-oct-css-->
    <link href="~/content/oct-sidebar.css" rel="stylesheet" />
    <link href="~/content/oct-components.css" rel="stylesheet" />
    @* <link href="~/content/oct-responsive.css" rel="stylesheet" media="screen and (max-width:1280px)" /> *@
    <link href="~/content/oct-tables.css" rel="stylesheet" /> 
    <link href="~/content/pagedlist.css" rel="stylesheet" />
    <link href="~/content/text-oct-css.css" rel="stylesheet" />
    <link href="~/content/a.css" rel="stylesheet" />
    

    
    <!-- Core JavaScript -->
    <script src="~/static/vendor/jquery/jquery.min.js"></script>
    <script src="~/scripts/jquery-ui.js"></script>
    @* <script src="~/static/boostrap-4.1.3/js/bootstrap.min.js"></script> *@
    <script src="~/static/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/static/vendor/chart.js/chart.min.js"></script>
    <script src="~/static/select2/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

     

    @RenderSection("styles", required: false)
</head>
<body>

   
    @if (Session["MenuModels"] != null)
    {
       
        <button id="toggle-sidebar" class="btn btn-primary"> Menu
            <i class="fas fa-bars"></i>
        </button>
        <!-- Sidebar -->
        <div id="sidemenubar" class="@(User.Identity.IsAuthenticated ? "open" : "")">

            @if (User.Identity.IsAuthenticated)
            { 
                @Html.Partial("_Sidebar")
             }
        </div>
    }
   

    <!-- Main Content -->
    <div id="main" class="@(User.Identity.IsAuthenticated ? "expanded" : "")">
        @if (User.Identity.IsAuthenticated)
        {
            @Html.Partial("_Topbar")
        }
        else
        {
            <header class="navbar-header">
                <div class="container-fluid">
                    <div class="navbar-brand">
                        <img src="http://octap01/intranet/image/logo2022.png" alt="OCT Logo" height="50">
                        <span>OCT Web Applications</span>
                    </div>
                    <div class="navbar-nav">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </header>
        }

        <div class="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div> 

         @Html.Partial("_footer")
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidemenubar");
            const mainContent = document.getElementById("main");
            const openBtn = document.getElementById("toggle-sidebar"); // ปุ่มเปิด (fa-bars)
            const closeBtn = document.getElementById("Close-sidebar"); // ปุ่มปิด (fa-th-large) ที่อยู่ใน sidebar

            // กำหนดให้ sidebar เปิดเป็นสถานะเริ่มต้นเมื่อหน้าโหลด
            openSidebar();

            // Event listener สำหรับปุ่มเปิด (fa-bars)
            openBtn.addEventListener("click", function () {
                openSidebar();
            });

            // Event listener สำหรับปุ่มปิด (fa-th-large) ที่อยู่ใน sidebar
            closeBtn.addEventListener("click", function () {
                closeSidebar();
            });

            function openSidebar() {
                sidebar.style.width = "280px";
                mainContent.style.marginLeft = "280px";
                openBtn.style.display = "none"; // ซ่อนปุ่มเปิด (fa-bars)
                // ปุ่ม closeBtn อยู่ใน sidebar ดังนั้นจะแสดงผลเมื่อ sidebar เปิด
            }

            function closeSidebar() {
                sidebar.style.width = "0px";
                mainContent.style.marginLeft = "0px";
                openBtn.style.display = "block"; // แสดงปุ่มเปิด (fa-bars)
                // ปุ่ม closeBtn อยู่ใน sidebar ดังนั้นจะซ่อนเมื่อ sidebar ปิด (width: 0px)
            }

            // ปิด Sidebar บนอุปกรณ์ขนาดเล็ก
            window.addEventListener("resize", function () {
                if (window.innerWidth < 768) {
                    // ตรวจสอบว่า sidebar เปิดอยู่หรือไม่ก่อนที่จะสั่งปิด
                    if (sidebar.style.width !== "0px" && sidebar.style.width !== "") {
                        closeSidebar();
                    }
                }
            });
        });

    </script>
