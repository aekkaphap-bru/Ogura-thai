@model OCTWEB_NET45.Models.ViewFormulasModel
@{
    ViewBag.Title = "ViewFormulas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/static/jstree/dist/themes/default/style.min.css" rel="stylesheet" />
<script src="~/static/jstree/dist/jstree.min.js"></script>

<div class="container-fluid">
    <div class="row">
        <a href="/DW_DrawingReport/DList" class="btn-outline-secondary"><i class="fa fa-angle-left"></i> Drawing Report</a>
    </div>
    <div class="row">
        <div class="container">
            <div class="card shadow-lg border-0 rounded-lg mt-0 mb-3">
                <div class="card-header justify-content-center">
                    <h3 class="page-title ">View Formulas</h3>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <p>
                                    <span class="badge badge-info" style="font-size: 18px;"><strong>Main Model</strong></span> &nbsp;
                                    <span style="color:#0b4ea0 ">
                                        <strong>Drawning Number: </strong>@Model.drawingNo, &nbsp;
                                        <strong>Model: </strong>@Model.modelNo,  &nbsp;
                                        <strong>Part Name: </strong>@Model.partName
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div id="jstree"></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    @using (Html.BeginForm("ViewFormulas", "DW_DrawingReport", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Form1" }))
    {
        <div class="row">
            <div class="col-md-8">
                <button type="submit" name="ExportToCsvBtn" id="ExportToCsvBtn" class="btn btn-sm btn-outline-primary" value="Export">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
        <div class="row">
            <table class="tablecustom" id="table1" style="font-size:14px;">
                <thead>
                    <tr>
                        <th>
                            Items
                        </th>
                        <th>
                            Drawing File
                        </th>
                        <th>
                            Partlist File
                        </th>
                        <th>
                            Level
                        </th>
                        <th>
                            Drawing No.
                        </th>
                        <th>
                            Revision
                        </th>
                        <th>
                            Model No.
                        </th>
                        <th>
                            Semi Assembly
                        </th>
                        <th>
                            Customer No.
                        </th>
                        <th>
                            Part Name
                        </th>
                        <th>
                            Usage
                        </th>
                        <th>
                            Note
                        </th>
                        <th>
                            Common
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChildFormulasModelList.Select((value, i) => new { i, value }))
                    {
                        <tr>
                            <td>
                                @((item.i))
                            </td>

                            <td>
                                @if (!String.IsNullOrEmpty(item.value.drawing_file))
                                {
                                    <a href="@Url.Action(actionName: "DownloadDrawingFile"
                                                , controllerName: "DW_DrawingReport"
                                                , routeValues: new {filename = item.value.drawing_file })" class="btn btn-sm link-info">
                                        <i class="fas fa-drafting-compass"></i> Drawing File
                                    </a>
                                }
                            </td>
                            <td>
                                @if (!String.IsNullOrEmpty(item.value.partlist_file))
                                {
                                    <a href="@Url.Action(actionName: "DownloadPartListFile"
                                                , controllerName: "DW_DrawingReport"
                                                , routeValues: new {filename = item.value.partlist_file })" class="btn btn-sm link-success" style="color:#ff006e">
                                        <i class="fas fa-list"></i> Part List File
                                    </a>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.level)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.drawingNo)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.revision)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.modelNo)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.semiAssembly)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.customerNo)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.partName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.usage)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.value.note)
                            </td>
                            <td>
                                <a href="@Url.Action(actionName: "GetCommon"
                                                , controllerName: "DW_DrawingReport"
                                                , routeValues: new {id = item.value.id })" class="btn btn-sm btn-info">
                                    <i class="fas fa-folder-open"></i> Common
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group text-center">
                    <button type="button" onclick="history.back()" name="Cancel" class="btn btn-outline-primary">
                        <i class="fas fa-undo"></i> Back
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#jstree').jstree({
            'core' : {
                'data': @Html.Raw(Json.Encode(Model.JsTreeModelList))
                },
            "types": {
                "default": {
                    "icon": "fa fa-file text-primary"
                },
                "file": {
                    "icon": "fa fa-file  text-primary"
                },
                "root": {
                    "icon": "fa fa-folder  text-warning"
                }
            },
            "plugins": ["types"]
        });

        $('#jstree').on("changed.jstree", function (e, data) {
            console.log(data.selected);
        });

    });
   

</script>