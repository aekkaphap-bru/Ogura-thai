@model OCTWEB_NET45.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-lg border-0 rounde-lg mt-0 mb-3"  >
        <div class="card-header justify-content-center">
            <h3 class="page-title ">Create New Account</h3>
            <p class="text-danger">@ViewBag.Message</p>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-row">
                    <div class="col-md-6">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class="text-danger"})
                    </div>
                </div>
                
                <div class="form-row justify-content-center">
                    <div class="col-md-3 mx-2">
                        <div class="form-group">
                            <label class="mb-3">User Name: </label>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-sm" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.UserName)</p>
                        </div>
                    </div>
                    <div class="col-md-3 mx-2">
                        <div class="form-group">
                            <label class="mb-3">Email: </label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-sm" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Email)</p>
                        </div>
                    </div>
                    <div class="col-md-3 mx-2">
                        <div class="form-group">
                            <label class="mb-3">User Code: </label>
                            @Html.TextBoxFor(m => m.USE_Usercode, new { @class = "form-control form-control-sm" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.USE_Usercode)</p>
                        </div>
                    </div>
                </div>
                 <div class="form-row justify-content-center">
                    <div class="col-md-3 mx-2">
                        <div class="form-group">
                            <label class="mb-3">Password: </label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-sm" })
                            <p class="text-danger">@Html.ValidationMessageFor(m => m.Password)</p>
                        </div>
                    </div>
                     <div class="col-md-3 mx-2">
                         <div class="form-group">
                             <label class="mb-3">Confirm Password: </label>
                             @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm" })
                             <p class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</p>
                         </div>
                     </div>
                     <div class="col-md-3 mx-2"></div>
                </div>
                 <div class="form-row justify-content-center">
                     <div class="col">
                         <fieldset>
                             <legend>User Detail</legend>
                             <div class="form-row justify-content-center">
                                 <div class="col-md-3 mx-2">
                                     <div class="form-group">
                                         <label class="mb-3">First Name: </label>
                                         @Html.TextBoxFor(m => m.USE_FName, new { @class = "form-control form-control-sm" })
                                         @Html.ValidationMessageFor(m => m.USE_FName, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                                 <div class="col-md-3 mx-2">
                                     <div class="form-group">
                                         <label class="mb-3">Last Name: </label>
                                         @Html.TextBoxFor(m => m.USE_LName, new { @class = "form-control form-control-sm" })
                                         @Html.ValidationMessageFor(m => m.USE_LName, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                                 <div class="col-md-3 mx-2">
                                     <div class="form-group">
                                         <label class="mb-3">Nick Name: </label>
                                         @Html.TextBoxFor(m => m.USE_NickName, new { @class = "form-control form-control-sm" })
                                         @Html.ValidationMessageFor(m => m.USE_NickName, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                             </div>
                             <div class="form-row justify-content-center">
                                 <div class="col-md-2 mx-2">
                                     <div class="form-group">
                                         <label class="mb-3">Tel: </label>
                                         @Html.TextBoxFor(m => m.USE_TelNo, new { @class = "form-control form-control-sm" })
                                     </div>
                                 </div>
                                 <div class="col-md-3 mx-2">
                                     <div class="form-group">
                                         <label class="mb-3">Department: </label>
                                         @Html.DropDownList("Dep_Id", Model.Departments, "Departments", new { @class = "form-control form-control-sm" })
                                         @Html.ValidationMessageFor(m => m.Dep_Id, "", new { @class = "text-danger" })
                                     </div>
                                 </div>
                                 <div class="col-md-2 mx-2">
                                     <div class="form-group">
                                         <label class="mb-3">Nationality: </label>
                                         @Html.DropDownList("USE_Nationality", Model.National, "Nationality", new { @class = "form-control form-control-sm" })
                                         @Html.ValidationMessageFor(m => m.USE_Nationality, "", new { @class = "text-danger" })
                                     </div>
                                 </div>

                                 <div class="col-md-2 mx-2">
                                     <div class="form-group">
                                        <label class="mb-3">Status : </label>
                                        <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
                                            <div class="form-control form-control-sm d-flex justify-content-center">
                                                @Html.CheckBoxFor(m => m.BoolStatus, new { @class = "form-check-input" })
                                            </div>
                                        </div>

                                     </div>
                                 </div>
                             </div>
                         </fieldset>
                     </div>
                </div>
                <div class="form-row justify-content-center">
                    <div class="col text-center">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" value="Register" >
                                <i class="fas fa-cash-register"></i> Register
                            </button>
                            &nbsp;
                            <button type="button" onclick="history.back()" name="Cancel" class="btn btn-danger">
                                <i class="fas fa-ban"></i> Cancel
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

