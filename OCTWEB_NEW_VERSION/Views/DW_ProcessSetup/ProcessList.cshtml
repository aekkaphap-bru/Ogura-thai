<script language="JavaScript">
    // Listen for click on toggle checkbox
    $('#select-all').click(function (event) {
        if (this.checked) {
            // Iterate each checkbox
            $(':checkbox').each(function () {
                this.checked = true;
            });
        } else {
            $(':checkbox').each(function () {
                this.checked = false;
            });
        }
    });

    $(document).on('select2:open', function (e) {
        const selectId = e.target.id;
        $(".select2-search__field[aria-controls='select2-" + selectId + "-results']").each(function (key, value) {
            value.focus();
        });
    });

    $("#SearchBtn").click(function () {
        $("#ExportToCsv").val("");
        document.forms["Form1"].submit();
    })

    $("#ExportToCsvBtn").click(function () {
        $("#ExportToCsv").val("ExportToCsv");
        document.forms["Form1"].submit();
    })

    $("#deleteall").click(function () {
        $("#ExportToCsv").val("");
        if (confirm('Delete all selected elements?')) {
            document.forms["Form2"].submit();
        }
    })


    $("#clear").click(function () {
        $('#search_processCode').val(null).trigger('change');
        $('#search_processNo').val(null).trigger('change');
        $('#search_partName_id').val(null).trigger('change');
    });

   
    $("#table1 tbody tr").click(function () {

        if ($(this).hasClass('selected')) {
            $(this).removeClass('selected');
        }
        else {
            $(this).addClass('selected');
        }
    });

    $(document).ready(function () {
        $("#search_processCode").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/DW_ProcessSetup/GetProcessCode",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return item;
                        }))
                    }
                })
            },
            messages: {
                noResults: 'No results found.',
                results: function (count) {
                    return count + (count > 1 ? ' results' : ' result ') + ' found';
                }
            },
        });
        $("#search_processNo").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/DW_ProcessSetup/GetProcessNo",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return item;
                        }))
                    }
                })
            },
            messages: {
                noResults: 'No results found.',
                results: function (count) {
                    return count + (count > 1 ? ' results' : ' result ') + ' found';
                }
            },
        });
    })

    $(document).ready(function () {
        /*
        $("#search_partName_id").select2({
            placeholder: "All",
            allowClear: true,
            width: 'resolve'
        });
       */

        //-------------------------------------------Table1-------------------------------------------------------//
        var dt = $("#table1").DataTable({
            "data":@Html.Raw(Json.Encode(Model.ProcessList)),
            "columns": [
                { "data": "id", "autowidth":true },
                { "data": "id", "autowidth":true
                        ,"render": function(data, type, row){
                            return '<div><a href="/DW_ProcessSetup/Edit?id='+data+'" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Edit</a></div>';
                        }
                },
                { "data": "id", "autowidth":true },
                { "data": "processCode", "autowidth":true},
                { "data": "processNo", "autowidth":true},
                { "data": "partName","autowidth":true},
            ],
            select: true,
            buttons: [],
            "pageLength": 30,
            "lengthMenu": [[30,50,100,-1],[30,50,100,"All"]],
            columnDefs: [
                          {sortable: false,targets: 1 , width:100} ,
                          {sortable: false,targets: 2 , width:50} , 
                          {sortable: true,targets: 3 , width:120} , 
                          {sortable: true,targets: 4 , width:120} ,  
                          {sortable: true,targets: 5 , width:120} ,  
                          {targets: 0 , orderable: false, className: 'select-checkbox',
                              'render': function(data, type,full,meta){
                                  return '<input type="checkbox" name="selectedItem" value="'+data+'">';
                              }
                          }
            ],
            "ordering": true,
            order: [[ 3, 'asc' ]],
            fixedColumns: true

        })
        dt.on('order.dt search.dt', function () {
            let i = 1;
            dt.cells(null, 2, { search: 'applied', order: 'applied' }).every(function (cell) {
                this.data(i++);
            });
        }).draw();
    });


</script>