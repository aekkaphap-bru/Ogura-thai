<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <h4 class="page-title ">Process <span style="color:red;">Setup</span></h4>
                    <p class="text-success">@ViewBag.Message</p>
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                    @Html.ValidationSummary(true)
                </div>
            </div>
        </div>
	    <div class="card-body">
            @using (Html.BeginForm("ProcessList", "DW_ProcessSetup", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Form1" }))
            {
                <div class="row">
                    <div class="col">
                        <fieldset>
                            <div class="form-row justify-content-center">
                                <div class="col-md-2 px-1">
                                    <div class="form-group">
                                        <label>Process Code: </label>
                                        @Html.TextBoxFor(m => m.search_processCode, "", new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Group Line Name: </label>
                                        @Html.DropDownList("search_partName_id", Model.SelectPartName, "All", new { @class = "form-control form-control-sm", style = "width:100%" })
                                    </div>
                                </div>
                                <div class="col-md-3 px-1">
                                    <div class="form-group">
                                        <label>Process Number: </label>
                                        @Html.TextBoxFor(m => m.search_processNo, "", new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                                <div class="col-md-4 align-self-end">
                                    <div class="form-group">
                                        <button type="submit" id="SearchBtn" name="SearchBtn" class="btn btn-sm btn-success" value="Search">
                                            <i class="fas fa-search"></i> Search
                                        </button>
                                        <button type="button" name="ExportToCsvBtn" id="ExportToCsvBtn" class="btn btn-sm btn-outline-primary" value="Export">
                                            <i class="fas fa-download"></i> Export
                                        </button>
                                        <input hidden="hidden" id="ExportToCsv" name="ExportToCsv" value="null" />

                                        <button id="clear" type="button" name="clear" class="btn btn-sm btn-outline-dark">
                                            <i class="fas fa-eraser"></i> Clear
                                        </button>
                                    </div>    
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            }
